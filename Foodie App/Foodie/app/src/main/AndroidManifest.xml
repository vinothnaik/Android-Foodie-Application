<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.food.planner">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.AddFood"
            android:label="Add Food"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Activities.FoodListTest"
            android:label="Food List"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".Activities.FoodList"
            android:label="Food List"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>



        <activity android:name="com.food.planner.Activities.DashBoard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.food.planner.Activities.AddTags" />
        <activity android:name="com.food.planner.Activities.SelectDate" />
        <activity android:name="com.food.planner.Activities.SelectFoodTime" />
        <activity
            android:name="com.food.planner.Activities.SelectFood"
            android:label="@string/title_activity_select_food"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name="com.food.planner.Activities.ShareOrContinuePlanning" />
        <activity android:name="com.food.planner.Activities.History"></activity>
    </application>

</manifest>