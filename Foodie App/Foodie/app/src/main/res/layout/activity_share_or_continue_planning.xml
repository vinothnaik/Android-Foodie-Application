<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.food.planner.Activities.ShareOrContinuePlanning">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:weightSum="4.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/border"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight=".3"
                android:weightSum="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:src="@drawable/ic_calendar_black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/date" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/date"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="Date of selection"
                    android:src="@drawable/ic_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:background="@drawable/border"
                android:id="@+id/breakfastLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mycolor"
                    android:text="BreakFast"
                    android:textColor="@color/white"/>

                <TextView
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:gravity="left"
                    android:layout_marginLeft="36dp"
                    android:text="Hello"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/breakfastText"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="6dp"
                android:background="@drawable/border"
                android:visibility="gone"
                android:id="@+id/lunchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mycolor"
                    android:text="Lunch"
                    android:textColor="@color/white"/>
                <TextView
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:gravity="left"
                    android:layout_marginLeft="36dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lunchText"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:background="@drawable/border"
                android:visibility="gone"
                android:id="@+id/dinnerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mycolor"
                    android:text="DInner"
                    android:textColor="@color/white"/>
                <TextView
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:gravity="left"
                    android:layout_marginLeft="36dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dinnerText"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:background="@drawable/border"
                android:visibility="gone"
                android:id="@+id/othersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mycolor"
                    android:text="Others"
                    android:textColor="@color/white"/>
                <TextView
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:gravity="left"
                    android:layout_marginLeft="36dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/othersText"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"/>


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/optionsLay"
        android:gravity="center"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout

            android:id="@+id/continuePlanning"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_bottom_bg"
            android:layout_width="130dp"
            android:layout_height="80dp"
            />
        <TextView
            android:paddingTop="25dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="PLAN MORE"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_bottom_bg"
                android:layout_width="130dp"
                android:layout_height="80dp"
                />
            <TextView
                android:paddingTop="25dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="SHARE"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_bottom_bg"
                android:layout_width="130dp"
                android:layout_height="80dp"
                />
            <TextView
                android:paddingTop="25dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="DONE"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

<!--
        </RelativeLayout>-->

    </LinearLayout>





</RelativeLayout>
